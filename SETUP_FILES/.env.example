/**
 * ENVIRONMENT VARIABLES TEMPLATE
 * 
 * Installation:
 * 1. Copy content below
 * 2. Create .env file in your project root
 * 3. Fill in your actual values
 * 4. Keep .env in .gitignore (never commit credentials)
 */

# ============================================================================
# TELNYX CONFIGURATION
# ============================================================================

# Get from: https://portal.telnyx.com/api/credentials
TELNYX_API_KEY=your_telnyx_api_key_here

# Get from: https://portal.telnyx.com/connections/credentials
TELNYX_SIP_USERNAME=your_sip_username
TELNYX_SIP_PASSWORD=your_sip_password

# Telnyx SIP server (don't change this)
TELNYX_SIP_SERVER=rtc.telnyx.com

# Your caller ID number in E.164 format
TELNYX_CALLER_ID=+1234567890

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=postgres
DB_PASSWORD=your_postgres_password

# ============================================================================
# API CONFIGURATION
# ============================================================================

API_PORT=3001
API_BASE_URL=http://localhost:3001/api
NODE_ENV=production

# ============================================================================
# AUTHENTICATION
# ============================================================================

JWT_SECRET=your_jwt_secret_key_min_32_characters

# ============================================================================
# OPTIONAL: MONITORING & LOGGING
# ============================================================================

LOG_LEVEL=info
SENTRY_DSN=https://your_sentry_key@sentry.io/project_id

# ============================================================================
# OPTIONAL: REDIS (for distributed call tracking)
# ============================================================================

REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=optional_redis_password
